  <link rel="stylesheet" href="/stylesheets/font-awesome-4.7.0/css/font-awesome.min.css">
  <link rel="stylesheet" href="/stylesheets/resets.css">
  <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>

  <div id="container">

    <!-- HEADER SECTION -->
    <header>
      <!-- LOGO -->
      <div id="logoDiv">
        <a href="/">
          <span class="fa fa-pencil-square-o" aria-hidden="true">writeIt</span>

        </a>
      </div>

      <!-- USER INFO AREA -->
      <div id="headerUserAreaDiv">
        <table>
          <tbody>
            <tr>
              <td>
                User: {{user}}
              </td>
              <td>
                <a href="/articles/{{user}}"><button type="button" name="button">My posts</button></a>
              </td>
              <td>
                <a href="/users/{{user}}"><button type="button" name="button">Settings</button></a>
              </td>
            </tr>

            <tr>
              <td>
                &nbsp;
              </td>
              <td>
                <a href="/newarticle" type="button" name="newArticleButton" id="newArticleButton">
                  <button type="button" name="button">
                  New post
                  </button>
                </a>
              </td>
              <td>
                <form id="logoutForm" class="" action="/logout" method="get">

                  <label for="logoutSubmit">
                    <button type="submit" name="logoutButton" id="logoutSubmit">Logout</button>
                  </label>
                </form>
              </td>
            </tr>

          </tbody>
        </table>

      </div>
    </header>

    <!-- MAIN SECTION -->
    <main>
      <div id="maxWidthMain">

        {{{body}}}

      </div>


    </main>






    <!-- FOOTER SECTION -->
    <footer>
      January 2017 - today |
      <a href="#">Paraskevas Apostolopoulos</a>
    </footer>

  </div>

  <!-- JAVASCRIPT DOCUMENT LINK -->
  <script type="text/javascript" src="/javascripts/scripts.js">

  </script>
</body>
</html>
